{
	"compilerOptions": {
		"target": "es6",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist/",
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"@/resources/*": ["resources/*"],
			"@/utils/*": ["utils/*"],
			"@/middleware/*": ["middleware/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
