{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2021"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": "./"
	},
	"include": ["**/*.ts", "**/*.js"],
	"exclude": ["node_modules"]
}
